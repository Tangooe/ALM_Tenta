@using ALM_Tenta.View_Models
@model ALM_Tenta.View_Models.DepositViewModel
@{
    ViewData["Title"] = "Withdrawal";
}

<h2>Deposit</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Withdrawal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Accounts" class="control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="@Model.Accounts"></select>
                <span asp-validation-for="Accounts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>